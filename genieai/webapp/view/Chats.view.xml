


<mvc:View controllerName="genieai.controller.Chats" displayBlock="true"
	xmlns="sap.m"
	xmlns:core="sap.ui.core" 
	xmlns:mvc="sap.ui.core.mvc">

	<Page showHeader="false" showNavButton="false">
		<content>
			<List id="chatList" noDataText="No chats available. Create one by clicking on the add button." growing="true" growingScrollToLoad="true" growingThreshold="20" items="{ path: '/DocumentChunk' }" itemPress="onChatPress">
				<headerToolbar>
					<Toolbar>
						<Title text="Your Chats"></Title>
						<ToolbarSpacer></ToolbarSpacer>
						<Button type="Emphasized" icon="sap-icon://add" press="onAddChat" />
					</Toolbar>
				</headerToolbar>
				<StandardListItem type="Navigation" title="{text_chunk}" description="test"></StandardListItem>
			</List>
		</content>
	</Page>

</mvc:View>